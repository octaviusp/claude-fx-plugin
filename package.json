{
  "name": "claude-fx-plugin",
  "version": "1.0.0",
  "description": "Visual and audio feedback for Claude Code - animated mascot overlay that reacts to your coding session",
  "author": {
    "name": "Octavio",
    "url": "https://github.com/octaviopavon"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/octaviopavon/claude-fx-plugin"
  },
  "homepage": "https://github.com/octaviopavon/claude-fx-plugin#readme",
  "bugs": {
    "url": "https://github.com/octaviopavon/claude-fx-plugin/issues"
  },
  "scripts": {
    "generate-assets": "python3 scripts/generate-placeholders.py",
    "overlay": "python3 scripts/overlay.py",
    "overlay:stop": "pkill -f 'python3.*overlay.py' || true",
    "test": "python3 -m pytest tests/ -v",
    "test:cov": "python3 -m pytest tests/ --cov=scripts --cov-report=html",
    "test:quick": "python3 -m pytest tests/ --no-cov -q",
    "lint": "python3 -m ruff check scripts/ tests/"
  },
  "engines": {
    "python": ">=3.9.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "plugin",
    "hooks",
    "overlay",
    "mascot",
    "macos",
    "animation"
  ],
  "license": "MIT"
}
